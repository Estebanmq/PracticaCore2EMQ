@model List<Libro>


@if (Model.Count == 0)
{
    <h1>No hay libros en la cesta</h1>
}
else
{ 
<form method="post">
    <button type="submit" class="btn btn-success">Finalizar compra</button>
    <div class="row">
        @foreach (Libro libro in Model)
        {
        <div class="col-4">
            <input type="hidden" name="idlibro" value="@libro.IdLibro" />
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="~/images/@libro.Portada" alt="Card image cap">
                <div class="card-body">
                    <a asp-controller="Libros" asp-action="Cesta" asp-route-idlibro="@libro.IdLibro" class="btn btn-danger">Quitar del carrito</a>
                </div>
            </div>
        </div>
        }
    </div>
</form>
}

